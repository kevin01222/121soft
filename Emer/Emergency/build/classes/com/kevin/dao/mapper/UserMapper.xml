<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kevin.dao.mapper.UserMapper">
	<select id="findAll" resultType="com.kevin.dao.pojo.User">
		select * from t_user
	</select>
	<select id="findById" parameterType="java.lang.Integer"
		resultType="com.kevin.dao.pojo.User">
		select * from t_user where userId=#{value}
	</select>
	<select id="findByName" parameterType="java.lang.String"
		resultType="com.kevin.dao.pojo.User">
		select * from t_user where username=#{value}
	</select>
	<insert id="save" parameterType="com.kevin.dao.pojo.User">
		insert into t_user (userId,username,password,phone,email,level)
		values(#{userId},#{username},#{password},#{phone},#{email},#{level})
	</insert>
	<delete id="delete" parameterType="com.kevin.dao.pojo.User">
		delete from t_user where userId=#{userId}
	</delete>
	<update id="update" parameterType="com.kevin.dao.pojo.User">
		update t_user set
		username=#{username},password=#{password},phone=#{phone},email=#{email},level=#{level}
		where userId=#{userId}
	</update>
	<select id="login" parameterType="com.kevin.dao.pojo.User"
		resultType="com.kevin.dao.pojo.User">
		select * from t_user where username=#{username} and password=#{password}
	</select>
</mapper>